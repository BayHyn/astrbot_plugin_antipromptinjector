name: antipromptinjector
author: LumineStory
desc: 屏蔽伪系统注入攻击的插件
version: 1.3.0
entry: main.py

config_schema:
  enabled:
    type: boolean
    default: true
    description: 是否启用注入检测功能

  detect_admin_spoof:
    type: boolean
    default: true
    description: 是否检测伪造管理员身份

  log_admin_commands:
    type: boolean
    default: true
    description: 是否记录管理员指令日志

  admin_ids:
    type: string
    default: "3338169190"
    description: 管理员 ID 列表，逗号分隔
